import random as क्रीडा

यंत्र =  क्रीडा.randint(1,100)

प्रयास = 0

while True:
    संख्या= int(input("कृपया भवान् संख्या प्रेश्या:  "))
  
    if यंत्र == संख्या :
        print(f"उत्तम। भवान् संख्या बहु लभते।। भवान् प्रयासे {प्रयास} च अस्ति।।")
        
        break
    elif यंत्र > संख्या :
        print("भवान् संख्या न लभते। कृपया दीर्घ संख्ये प्रेषयति: ")
    else:
        print("भवान् संख्या न लभते। कृपया लघु संख्ये प्रेषयति: ") 
    प्रयास +=1
