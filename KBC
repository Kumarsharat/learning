import random as प्रश्नोत्तरी_क्रीड़ा 

प्रश्न_सूची = [ "भारतस्य राजधानी किमपि अस्ति ? ", "बिहार राज्ये राजधानी किमपि अस्ति ? "

  
      ]

उत्तर_सूची = [ "दिल्ली", "पटना"]

while True:
    प्रश्न = प्रश्नोत्तरी_क्रीड़ा.choice(प्रश्न_सूची)
    print(प्रश्न)
    प्रतियोगी = input("कृपया भवान् उत्तरः प्रेषयति: ")
    if प्रतियोगी == उत्तर_सूची[प्रश्न_सूची.index(प्रश्न)]:
        print("अति उत्तम ")
